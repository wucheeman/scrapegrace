<div class="container">
<div class="row">
  <div class="col-sm-12 text-left">
    <h1>Scrapegrace News!</h1>
    <h4>A Rascal of a News Site for Chapel Hill, NC</h4>
    {{!-- <a class="nav-link" href="/articles">Get Articles <span class="sr-only">(current)</span></a> --}}
    <br>
</div> <!--end of row -->
{{# each articles }}
  <div class="container">
    <div class="row">
      <div class="col-sm-10">
        <h5>{{ this.title }}</h5>
        <p>{{ this.summary }}</p>
      </div> <!-- end of col -->
      <div class="col-sm-2">
        <a href='{{ this.link }}' class="btn btn-success btn-sm read" target="_blank" >Read Article</a>
      </div> <!-- end of col -->
    </div> <!-- end of row -->
    <div class='row'>
      <div class="col-sm-10">
        <p><strong>Comment:</strong>  {{this.note.body}}</p>
      </div> <!-- end of col -->
      <div class="col-sm-2">
        <form class='delete-group'>
          <input type="hidden" class="noteId" value="{{this.note._id}}">
          <button type="submit" class="btn btn-danger btn-sm">Delete Note</button>
        </form>
      </div> <!-- end of col -->
    </div> <!-- end row -->
      <div class='row'>
        <div class="col-sm-10">
      {{!-- <p><strong>Make Comment</strong></p> --}}
      <form class="create-form">
        <div class="form-group">
          {{!-- <input value={{this.note.body}} type="text" id="nb" name="body"> --}}
          <input type="text" id="nb" name="body" placeholder="Make Comment">
        </div>
          <input type="hidden" class="articleId" name="articleId" value="{{this._id}}">
          </div>
          <div class="col-sm-2">
        <button data-id={{this.id}} type="submit" class="btn btn-info btn-sm">Add Comment</button>
        </div>
        </form>
        </div> <!-- end or row -->
      <br>
    {{!-- </div> --}}
  </div>  <!-- end of inner container -->
{{/each}}
</div> <!-- end of outer container -->