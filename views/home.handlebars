<div class="container"></div>

<div class="row">
  <div class="col-sm-12 text-left pl-10">
    <h1>Scrapegrace!</h1>
    <h4>A Rascal of a News Site for Chapel Hill, NC</h4>
    <br>
    {{# each articles }}
      <div class="caption">
        <h5>{{ this.title }}</h5>
        <p>{{ this.summary }}</p>
        <p>articles/{{ this._id }}</p>
        <p>Comments:{{this.note.body}}</p>
        <a href='{{ this.link }}' class="btn btn-success btn-sm" target="_blank">Read</a>
        {{!-- TODO: make this work / clean out unneeded stuff--}}
        {{!-- <button class="comment btn btn-info btn-sm" data-id="{{id}}" data-devoured="{{devoured}}">Comment</button> --}}
        <h6>Add A Comment</h3>
        <form class="create-form">
          {{!-- todo remove title --}}
          <div class="form-group">
            <label for="nt">Title:</label>
            <input type="text" id="nt" name="title">
          </div>
          <div class="form-group">
            <input type="text" id="nb" name="body">
          </div>
            <input type="hidden" id="articleId" name="articleId" value="{{this._id}}">
          <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <br>
        <br>
        <br>
      </div>
    {{/each}}
  </div>